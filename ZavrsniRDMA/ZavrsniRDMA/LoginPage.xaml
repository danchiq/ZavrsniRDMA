<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ZavrsniRDMA.LoginPage">

    <StackLayout BackgroundColor="WhiteSmoke"
                 VerticalOptions="Center" HorizontalOptions="Fill" Margin="0,0,0,70">
        <Frame BackgroundColor="#3ba680">
            <Label Text="LOG IN" FontSize="Title" VerticalOptions="Center" HorizontalOptions="Center" TextColor="White"></Label>
        </Frame>
        <Entry x:Name="userEntry" Margin="20" TextColor="Black" Placeholder="Email" Keyboard="Email"/>
        <Entry x:Name="passEntry" Margin="20"  TextColor="Black"  Placeholder="Password" IsPassword="True"/>
        <Button x:Name="loginButton"
                Text="Login"
                BackgroundColor="Black"
                Margin="30" 
                TextColor="White"
                Clicked="LoginButton_Clicked"/>
        <Button x:Name="registerButton"
                Text="Register"
                BackgroundColor="Black"
                Margin="30,5" 
                TextColor="White"
                Clicked="RegisterButton_Clicked"
                />
    </StackLayout>

</ContentPage>
